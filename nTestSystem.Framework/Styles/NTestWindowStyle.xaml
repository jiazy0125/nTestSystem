<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:nTestSystem.Framework.Controls">
	<!--  主窗体样式  -->
	<Style x:Key="NTestWindow" TargetType="{x:Type ctrls:NTestWindow}">
		<Setter Property="AllowsTransparency" Value="True" />
		<Setter Property="WindowStyle" Value="None" />
		<Setter Property="BorderThickness" Value="10" />
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect
                    BlurRadius="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ctrls:NTestWindow}}, Path=WindowShadowSize}"
                    Opacity="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ctrls:NTestWindow}}, Path=WindowShadowOpacity}"
                    ShadowDepth="0"
                    Color="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ctrls:NTestWindow}}, Path=WindowShadowColor}" />
			</Setter.Value>
		</Setter>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctrls:NTestWindow}">
					<Border
                        Padding="{TemplateBinding Margin}"
                        Panel.ZIndex="0"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
						<ContentPresenter />
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>