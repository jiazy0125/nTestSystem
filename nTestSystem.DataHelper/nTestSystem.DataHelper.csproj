<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>1.0.0.4</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="nTestSystem.DatabaseHelper" Version="1.0.0.1" />
    <PackageReference Include="nTestSystem.Framework" Version="1.0.0.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.1" />

    <PackageReference Update="@(PackageReference)" PrivateAssets="All" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet pack --no-build --output &quot;$(SolutionDir).NuGet.pkg&quot;" />
  </Target>

</Project>